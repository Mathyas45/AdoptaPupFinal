<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Spinner de las razas de perros -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#CC0026">

    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner_dog_breeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="39dp"
        android:prompt="@string/razas" />


    <!-- Foto mediana -->
    <ImageView
        android:id="@+id/image_dog"
        android:layout_width="330dp"
        android:layout_height="380dp"
        android:layout_centerInParent="true"
        android:src="@drawable/img_base" />

    <!-- Rectángulo plomo con texto -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_dog"
        android:layout_margin="16dp"
        android:layout_marginTop="-32dp"
        android:layout_marginBottom="16dp"
        android:background="#D9D9D9"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caracteristicas"
            android:textColor="#000000" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#ECECEC"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white">

        <!-- Botones del menú -->
        <TextView
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/votar"
            android:textColor="@color/RojoOscuro"
            android:textSize="19sp"
            android:textAlignment="center"
            android:text="@string/votar" />

        <TextView
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textAlignment="center"
            android:background="@color/white"
            android:drawableTop="@drawable/icono_razasN"
            android:text="@string/razas" />

        <TextView
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:background="@color/white"
            android:drawableTop="@drawable/icono_imagenes"
            android:text="@string/imagenes" />

        <TextView
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/white"
            android:drawableTop="@drawable/icono_favN"
            android:text="@string/faoritos" />

        <TextView
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="17sp"
            android:drawableTop="@drawable/icono_rankN"
            android:text="@string/popularidad" />

    </LinearLayout>


</RelativeLayout>
